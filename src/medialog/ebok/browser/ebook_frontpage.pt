<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>
 
<metal:head fill-slot="javascript_head_slot">
<script type="text/javascript">
  jQuery(function($){
    $('.newsImageContainer a').prepOverlay({subtype: 'image'});
  })
</script>
</metal:head>

<metal:content-core fill-slot="content-core"
          tal:define="templateId template/getId;
          scaled_image python: getattr(context.aq_explicit, 'image', False) and scale_func.scale('image', scale='preview')">
    <div id="book_frontpage">
            
        <figure class="bookImageContainer" 
        	tal:attributes="class python:'newsImageContainer image-' + 'preview'" 
             tal:condition="python: scaled_image">
            <a href="#"
               tal:define="here_url context/@@plone_context_state/object_url;
                           large_image python: scale_func.scale('image', scale='large');"
               			tal:attributes="href large_image/url">
              <img tal:replace="structure python: scaled_image.tag(css_class='newsImage')" />
              <figcaption
                 tal:condition="context/image_caption|nothing"
                 tal:content="structure context/image_caption" >
              </figcaption>

            </a>
        </figure>


        <div class="epubFileContainer"
             tal:condition="python: getattr(context.aq_explicit, 'ebok', False)">
            <a tal:attributes="href python:'%s/@@download/ebok' % context.absolute_url()">
             <img src="../ebook_icon.jpg/@@images/mini"  Last ned Ebok
            </a>
        </div>    
        
        <div class="pdfFileContainer"
             tal:condition="python: getattr(context.aq_explicit, 'bok_som_pdf', False)">
            <a tal:attributes="href python:'%s/@@download/bok_som_pdf' % context.absolute_url()">
            <img src="http://ebok.medialog.no/pdf-flat.dms/@@images/mini" /> Last ned boken som PDF
            </a>
        </div>    
                    
             
    </div>

</metal:content-core>

</body>
</html>

