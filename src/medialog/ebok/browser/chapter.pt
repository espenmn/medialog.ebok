<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:content-core fill-slot="content-core">
<metal:content-core define-macro="content-core"
                    tal:define="toc context/table_of_contents|nothing;">

	<div id="chapter-menu" class="hidden" tal:condition="toc">
  		<i class="fa fa-list"> </i>
	</div>

	<div id="parent-fieldname-text"
      tal:attributes="class python: toc and 'pat-autotoc' or ''" >

	
   		<tal:block repeat="widget view/widgets/values">
       		<tal:widget tal:content="structure widget/render" />
   		</tal:block>
    </div>
    <script>
      require([
        'jquery',
        '++theme++k16theme/jquery.magnific-popup'  // Note: no `.js`
      ], function($) {
           $('#content-core img').magnificPopup({
            type: 'image',
            callbacks: {
                elementParse: function(item) {
                    item.src = item.el.attr('src');
                }
            }
            });
            $('.autotoc-nav').attr("id", "TableOfContents");
            $('.autotoc-nav').addClass('visible');
            $(document).on("scroll",function(){
                if ($(this).scrollTop() >= 900) {
                    $('.autotoc-nav.visible').addClass('hidden absolute');
                    $('.autotoc-nav.visible').removeClass('visible');
  				    $('#chapter-menu').removeClass('hidden');
                }
  			});
  			$('#chapter-menu, #TableOfContents a').click(function() {
  			    $('#TableOfContents').toggleClass('hidden');
  			});
        });
    </script>
<style>
#chapter-menu {
	padding: 0.45em;
	text-align: center;
	font-size: 2.5em;
	position: fixed;
	top: 1em;
	margin-left: -2.5em;
	background: #e4f0f5;
	border-radius: 5px;
	z-index: 9;
	box-shadow: 3px 3px 6px #999;
	color: #0083aa;;
}

#chapter-menu:hover {
	cursor: pointer;
}

nav#TableOfContents.absolute {
	padding: 2em  !important;
	position: fixed;
	max-width: 500px;
	max-height: 100vh;
	overflow: scroll;
	top: 0em;
	margin: 0;
	padding-top: 0;
	border-radius: 5px;
	z-index: 9;
	box-shadow: 8px 8px 11px #AAA;
}
</style>
</metal:content-core>
</metal:content-core>

</body>
</html>
